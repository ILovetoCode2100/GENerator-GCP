# Virtuoso API CLI Configuration Example
# Copy this file to virtuoso-config.yaml and customize

# API configuration
api:
  base_url: https://api-app2.virtuoso.qa/api
  auth_token: your-auth-token-here  # Use VIRTUOSO_API_TOKEN env var for security

# Organization settings
organization:
  id: "2242"  # Your organization ID

# Headers for API requests
headers:
  X-Virtuoso-Client-ID: api-cli-generator
  X-Virtuoso-Client-Name: api-cli-generator

# Business rules
business_rules:
  initial_checkpoint_name: "INITIAL_CHECKPOINT"
  auto_attach_checkpoints: true
  create_initial_journey: true

# Output formatting
output:
  default_format: human  # Options: json, yaml, human, ai
  verbose: false

# HTTP client settings
http:
  timeout: 30  # seconds
  retries: 3
  retry_wait: 1  # seconds

# Logging
logging:
  level: info  # Options: debug, info, warn, error
  file: ~/.api-cli/api-cli.log

# Session context management
session:
  # Current project context - set by CLI commands
  current_project_id: null
  current_goal_id: null
  current_snapshot_id: null
  current_journey_id: null
  current_checkpoint_id: null

  # Position management
  auto_increment_position: true
  next_position: 1
