{
  "name": "Simple Search Test",
  "description": "Test search functionality",
  "steps": [
    {
      "type": "navigate",
      "target": "https://example.com",
      "description": "Go to homepage"
    },
    {
      "type": "interact",
      "command": "click",
      "target": "input.search-box",
      "description": "Click on search box"
    },
    {
      "type": "interact",
      "command": "write",
      "target": "input.search-box",
      "value": "test product",
      "description": "Type search query"
    },
    {
      "type": "interact",
      "command": "key",
      "target": "input.search-box",
      "value": "Enter",
      "description": "Press Enter to search"
    },
    {
      "type": "wait",
      "command": "element",
      "target": "div.search-results",
      "description": "Wait for search results"
    },
    {
      "type": "assert",
      "command": "exists",
      "target": "div.search-results .result-item",
      "description": "Verify search results exist"
    }
  ],
  "config": {
    "default_timeout": 10000
  }
}
