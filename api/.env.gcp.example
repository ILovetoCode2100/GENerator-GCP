# Example GCP configuration for Virtuoso API

# Basic settings
ENVIRONMENT=production
DEBUG=false
API_BASE_URL=https://api.example.com

# GCP Project settings
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_EMAIL=virtuoso-api@your-project.iam.gserviceaccount.com

# Enable GCP services (set to true to enable)
USE_FIRESTORE=true
USE_CLOUD_TASKS=true
USE_PUBSUB=true
USE_SECRET_MANAGER=true
USE_CLOUD_STORAGE=true
USE_CLOUD_MONITORING=true

# Local development with emulators
# FIRESTORE_EMULATOR_HOST=localhost:8080
# PUBSUB_EMULATOR_HOST=localhost:8085

# If using Firestore instead of Redis
RATE_LIMIT_ENABLED=true
CACHE_ENABLED=true

# Secret Manager cache
SECRET_CACHE_TTL_MINUTES=30

# Virtuoso API credentials (can be stored in Secret Manager instead)
# VIRTUOSO_API_KEY=your-virtuoso-api-key
# VIRTUOSO_BASE_URL=https://api-app2.virtuoso.qa/api
# VIRTUOSO_ORG_ID=your-org-id

# API Keys (can be stored in Secret Manager instead)
# API_KEYS=key1,key2,key3

# CORS settings
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Session management
SESSION_TIMEOUT=3600
SESSION_MAX_AGE=86400

# Cache settings
CACHE_TTL=300

# CLI settings
CLI_PATH=./bin/api-cli
CLI_TIMEOUT=300
