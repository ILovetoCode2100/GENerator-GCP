# D365 Virtuoso Test Deployment Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: D365 Instance Configuration
# Your D365 instance name (without .crm.dynamics.com)
# Example: contoso-dev, mycompany-test, acme-prod
D365_INSTANCE=your-instance-name

# REQUIRED: Virtuoso API Configuration
# Get your API token from the Virtuoso platform
# Usually found in Settings > API Keys or Profile > API Access
VIRTUOSO_API_TOKEN=your-api-token-here

# OPTIONAL: Organization Settings
# Default organization ID is 2242
# Only change if you have a different organization
# VIRTUOSO_ORG_ID=2242

# OPTIONAL: Deployment Performance Settings
# Number of tests to upload in parallel (default: 5)
# Increase for faster deployment, decrease if you hit rate limits
# DEPLOYMENT_PARALLEL_UPLOADS=5

# Batch size for processing tests (default: 10)
# DEPLOYMENT_BATCH_SIZE=10

# Number of retry attempts for failed operations (default: 3)
# DEPLOYMENT_RETRY_ATTEMPTS=3

# OPTIONAL: Debug Settings
# Enable verbose logging (default: false)
# DEBUG=true

# OPTIONAL: API Settings
# Override default API base URL if needed
# VIRTUOSO_API_BASE_URL=https://api-app2.virtuoso.qa/api

# OPTIONAL: Deployment Settings
# Continue on error instead of stopping (default: false)
# CONTINUE_ON_ERROR=false

# Maximum consecutive failures before stopping (default: 3)
# MAX_CONSECUTIVE_FAILURES=3
