# Virtuoso API CLI - Render Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ====================================
# REQUIRED: Virtuoso API Configuration
# ====================================

# Your Virtuoso API authentication token
# Get this from your Virtuoso account settings
VIRTUOSO_API_TOKEN=your-api-key-here

# Your Virtuoso organization ID
# Example: 2242
VIRTUOSO_ORG_ID=2242

# Virtuoso API base URL
# Default: https://api-app2.virtuoso.qa/api
VIRTUOSO_BASE_URL=https://api-app2.virtuoso.qa/api

# ====================================
# OPTIONAL: Service Configuration
# ====================================

# Server port (Render sets this automatically)
# Default: 8080
PORT=8080

# Log level (debug, info, warn, error)
# Default: info
LOG_LEVEL=info

# Enable CORS
# Default: true
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
# Default: * (allow all)
CORS_ORIGINS=*

# Request timeout
# Default: 30s
REQUEST_TIMEOUT=30s

# Maximum request size
# Default: 10MB
MAX_REQUEST_SIZE=10MB

# ====================================
# OPTIONAL: Performance Settings
# ====================================

# Worker pool size for concurrent operations
# Default: 10
WORKER_POOL_SIZE=10

# Enable caching
# Default: true
ENABLE_CACHE=true

# Cache TTL in seconds
# Default: 300 (5 minutes)
CACHE_TTL=300

# Enable rate limiting
# Default: true
ENABLE_RATE_LIMITING=true

# Rate limit: number of requests
# Default: 100
RATE_LIMIT_REQUESTS=100

# Rate limit: time window
# Default: 1m
RATE_LIMIT_WINDOW=1m

# ====================================
# OPTIONAL: Monitoring & Observability
# ====================================

# Enable metrics endpoint
# Default: true
ENABLE_METRICS=true

# Metrics port
# Default: 9090
METRICS_PORT=9090

# Enable distributed tracing
# Default: false
TRACE_ENABLED=false

# Tracing endpoint (if enabled)
# Example: https://your-tracing-service.com
TRACE_ENDPOINT=

# Trace sample rate (0.0 to 1.0)
# Default: 0.1 (10% of requests)
TRACE_SAMPLE_RATE=0.1

# ====================================
# OPTIONAL: External Services
# ====================================

# Redis URL for caching (if using Redis)
# Format: redis://user:password@host:port/db
# Example: redis://default:secret@redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com:12345/0
REDIS_URL=

# DataDog integration (if using DataDog)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# New Relic integration (if using New Relic)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=virtuoso-api-cli

# Sentry error tracking (if using Sentry)
SENTRY_DSN=

# ====================================
# OPTIONAL: Feature Flags
# ====================================

# Enable experimental features
# Default: false
ENABLE_EXPERIMENTAL=false

# Enable beta features
# Default: false
ENABLE_BETA=false

# Enable legacy compatibility mode
# Default: false
ENABLE_LEGACY=false

# ====================================
# OPTIONAL: CLI Configuration
# ====================================

# Default output format (json, yaml, table, human)
# Default: json
VIRTUOSO_OUTPUT_FORMAT=json

# Enable verbose output
# Default: false
VIRTUOSO_VERBOSE=false

# Enable debug mode
# Default: false
VIRTUOSO_DEBUG=false

# Color output (auto, always, never)
# Default: auto
VIRTUOSO_COLOR=auto

# Auto-increment step position
# Default: true
VIRTUOSO_AUTO_INCREMENT=true

# ====================================
# RENDER-SPECIFIC: Deployment Settings
# ====================================

# Render API key (for CLI deployments)
# Get this from: https://dashboard.render.com/account/api-keys
RENDER_API_KEY=

# Render service name
# Default: virtuoso-api-cli
RENDER_SERVICE_NAME=virtuoso-api-cli

# Git branch to deploy
# Default: main
GIT_BRANCH=main

# Environment name
# Default: production
ENVIRONMENT=production

# ====================================
# SECURITY: Authentication & Authorization
# ====================================

# API key for this service (if implementing auth)
# Generate with: openssl rand -hex 32
SERVICE_API_KEY=

# JWT secret for token generation (if using JWT)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Session secret (if using sessions)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# ====================================
# ADVANCED: System Configuration
# ====================================

# Maximum number of open files
# Default: 10000
ULIMIT_NOFILE=10000

# Graceful shutdown timeout
# Default: 30s
SHUTDOWN_TIMEOUT=30s

# Health check interval
# Default: 30s
HEALTH_CHECK_INTERVAL=30s

# Memory limit (Docker)
# Default: 512M
MEMORY_LIMIT=512M

# CPU limit (Docker)
# Default: 0.5
CPU_LIMIT=0.5
